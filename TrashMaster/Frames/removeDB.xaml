<Page x:Class="TrashMaster.Frames.removeDB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrashMaster.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="1100"
      Title="removeDB">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Id" HorizontalAlignment="Center"/>
                <TextBox x:Name="textbox_Id" Width="70"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="removeFromDB" Content="Slet" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Height="20" Width="120" Click="removeFromDB_Click"/>

    </Grid>
</Page>
